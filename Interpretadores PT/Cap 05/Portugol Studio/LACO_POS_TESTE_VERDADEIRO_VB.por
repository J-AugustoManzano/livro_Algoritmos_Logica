programa  // LACO_POS_TESTE_VERDADEIRO_VB
{
  funcao inicio()
  {
    inteiro N, R  
    caracter RESP
    RESP = 'S'
    faca         
    {
      leia(N)
      R = N * 3
      escreva(R, "\n")
      escreva("Deseja continuar? ")
      leia(RESP)
    }
    enquanto (RESP == 'S') 
  }
}
