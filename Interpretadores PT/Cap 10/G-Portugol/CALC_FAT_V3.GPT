algoritmo CALC_FAT_V3;

variáveis
  I, FAT, LIMITE : inteiro;
fim-variáveis

início
  imprima("Qual fatorial: ");
  LIMITE := leia();
  imprima(FATORIAL(LIMITE));
fim

função FATORIAL(N : inteiro) : inteiro
início
  FAT := 1;
  para I de 1 até N passo 1 faça
    FAT := FAT * I;
  fim-para
  retorne FAT;
fim
